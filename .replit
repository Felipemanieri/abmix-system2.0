modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[env]
DATABASE_URL = "postgresql://postgres:password@localhost:5432/abmix_db"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["sh", "-c", "NODE_ENV=production PORT=5000 tsx server/index.ts"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 24678
externalPort = 3000

[workflows]
runButton = "Sistema Abmix"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Emergency Start"
author = 44914105
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=5000 tsx server/index.ts"

[[workflows.workflow]]
name = "EMERGENCY RESTART"
author = 44914105
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=5000 tsx server/index.ts"

[[workflows.workflow]]
name = "Sistema Abmix"
author = 44914105
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=5000 tsx server/index.ts"

[[workflows.workflow]]
name = "RESTART LIMPO"
author = 44914105
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=5000 tsx server/index.ts"

[agent]
integrations = ["javascript_database==1.0.0", "javascript_websocket==1.0.0"]
